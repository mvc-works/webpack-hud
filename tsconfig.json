{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es2015",
    "lib": ["es2016", "dom"],
    "baseUrl": "./src/",
    "plugins": []
  },
  "exclude": ["node_modules", "example"],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}
